<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/uProductTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Product Title"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/uProductSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Product Size" />

    <EditText
        android:id="@+id/uProductColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Product Color" />

    <EditText
        android:id="@+id/uProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Product Price" />

    <EditText
        android:id="@+id/uProductOffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Product Offer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/updateBtn"
            android:text="Apply changes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>